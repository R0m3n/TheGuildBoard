@model int

<div class="parchment">
    <form asp-action="SubmitPost" method="post"style="margin: 5px;">
        <input type="hidden" value="@Model" name="boardid" />
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control form-control-lg" type="text" name="title" />
        </div>
        <div class="form-group">
            <label for="contents">Contents</label>
            <textarea class="form-control" style="height: 200px" name="contents" id="contents"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: black;">Submit</button>
    </form>
</div>
